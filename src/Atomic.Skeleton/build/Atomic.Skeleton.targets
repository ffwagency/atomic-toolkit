<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <AtomicSkeletonViewsFilesPath>$(MSBuildThisFileDirectory)..\Views\**\*.*</AtomicSkeletonViewsFilesPath>
  </PropertyGroup>

  <Target Name="CopyAtomicSkeletonViews" BeforeTargets="Build">
    <ItemGroup>
      <AtomicSkeletonViewsFiles Include="$(AtomicSkeletonViewsFilesPath)" />
    </ItemGroup>
    <Message Text="Copying Atomic.Skeleton Views: $(AtomicSkeletonViewsFilesPath) - #@(AtomicSkeletonViewsFiles->Count()) files" Importance="high" />
    <Copy SourceFiles="@(AtomicSkeletonViewsFiles)" DestinationFiles="@(AtomicSkeletonViewsFiles->'$(MSBuildProjectDirectory)\Views\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
  </Target>

</Project>