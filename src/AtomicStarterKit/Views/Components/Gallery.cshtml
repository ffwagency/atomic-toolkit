@model Gallery
@{
	if (Model == null) return;
}

<section class="py-4 py-xl-5">
	<div class="container">
		<div class="row mb-5">
			<div class="col-md-8 col-xl-6 text-center mx-auto">
				@if (!string.IsNullOrWhiteSpace(Model.PreTitle))
				{
					<h2>@Model.PreTitle</h2>
				}
				@if (!string.IsNullOrWhiteSpace(Model.Title))
				{
					<h2>@Model.Title</h2>
				}
			</div>
		</div>
		<div class="row gx-2 gy-2 row-cols-1 row-cols-md-2 row-cols-xl-3" data-bss-baguettebox="">
			@if (Model.MediaItems != null && Model.MediaItems.Any())
			{
				foreach (var item in Model.MediaItems)
				{
					<div class="col">
						<a href="@item.Url()">
							<img class="img-fluid" src="@item.Url()" loading="lazy">
						</a>
					</div>
				}
			}
		</div>
	</div>
</section>