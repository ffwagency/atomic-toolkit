<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<AssemblyVersion>1.0.1</AssemblyVersion>
		<Version>1.0.1</Version>
		<InformationalVersion>1.0.1</InformationalVersion>
		<TargetFramework>net7.0</TargetFramework>
		<Authors>FFW</Authors>
		<ContentTargetFolders>.</ContentTargetFolders>
		<Product>AtomicStarterKit</Product>
		<PackageId>AtomicStarterKit</PackageId>
		<Title>AtomicStarterKit</Title>
		<Description>Atomic Starter Kit for Umbraco</Description>

		<PackageIcon>logo.png</PackageIcon>
		<PackageIconUrl>../../images/logo.png</PackageIconUrl>
		<PackageTags>umbraco;umbraco-marketplace;atomic;starter;kit;atomicstarterkit;ffw</PackageTags>

	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="BuildBundlerMinifier2022" Version="2.9.9" />
		<PackageReference Include="BuildWebCompiler2022" Version="1.14.10" />
		<PackageReference Include="Umbraco.Cms.Core" Version="11.3.1" />
		<PackageReference Include="Umbraco.Cms.Infrastructure" Version="11.3.1" />
		<PackageReference Include="Umbraco.Cms.Web.Website" Version="11.3.1" />
		<PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="11.3.1" />
	</ItemGroup>

	<ItemGroup>
		<None Include="build\**" Pack="true" PackagePath="build" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="wwwroot\**\*.*" ExcludeFromSingleFile="true" CopyToPublishDirectory="Always" />
		<Content Include="Views\**\*.*" ExcludeFromSingleFile="true" CopyToPublishDirectory="Always" />
		<Content Include="bundleconfig.json" ExcludeFromSingleFile="true" CopyToPublishDirectory="Always" />
		<Content Include="compilerconfig.json" ExcludeFromSingleFile="true" CopyToPublishDirectory="Always" />
		<Content Include="compilerconfig.json.defaults" ExcludeFromSingleFile="true" CopyToPublishDirectory="Always" />
		<None Include="build\**" Pack="true" PackagePath="build" />
		<EmbeddedResource Include="Migrations\package.zip" />
	</ItemGroup>

	<ItemGroup>
		<None Include="../../images/logo.png" Pack="true" PackPath="\" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Atomic.OutputCache\Atomic.OutputCache.csproj" />
	  <ProjectReference Include="..\Atomic.SEO\Atomic.Sео.csproj" />
	</ItemGroup>

</Project>
