@model DoubleImage
@{
	if (Model == null) return;
}

<section class="bg-light double-image">
    <div class="container-fluid py-5">
        <div class="row">
            <div class="col-md-6 mb-lg-0 double-image__left">
                <div class="single-image single-image-5 text-white rounded">
                    <img src="@Model.LeftImageSource.Url()" alt="@Model.LeftImageSource.Name">
                    <div class="single-image-overlay"></div>
                    <div class="single-image-5-content">
                        <h2 class="text-uppercase single-image-5-title fw-light mb-0">@Model.LeftImageCaption</h2>
                        <p class="single-image-5-description fw-light mb-0">@Model.LeftImageDescription</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-lg-0  double-image__right">
                <div class="single-image single-image-5 text-white rounded">
                    <img src="@Model.RightImageSource.Url()" alt="@Model.RightImageSource.Name">
                    <div class="single-image-overlay"></div>
                    <div class="single-image-5-content">
                        <h2 class="text-uppercase single-image-5-title fw-light mb-0">@Model.RightImageCaption</h2>
                        <p class="single-image-5-description fw-light mb-0">@Model.RightImageDescription</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>