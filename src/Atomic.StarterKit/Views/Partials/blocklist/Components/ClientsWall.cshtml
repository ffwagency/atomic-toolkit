@model Umbraco.Cms.Core.Models.Blocks.BlockListItem<ClientsWall>
@{
	if (Model == null) return;
}

<section class="py-5 bg-light clients-wall-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="text-uppercase">@Model.Content.PreTitle</h2>
                <h3 class="text-muted section-subheading">@Model.Content.Title</h3>
            </div>
        </div>
        <div class="row">
            @if (Model.Content.Clients != null && Model.Content.Clients.Any())
            {
                foreach (var item in Model.Content.Clients)
                {
                    var currentItem = item.Content as ClientsWallItem;
                    @if (currentItem != null && currentItem.Link != null)
                    {
                        var link = currentItem.Link.Any() ? currentItem.Link.FirstOrDefault()!.Url : "#";
                        if (currentItem.Logo != null)
                        {
                            <div class="col-sm-6 col-md-3">
                                <a href="@link">
                                    <img class="img-fluid d-block mx-auto" src="@currentItem.Logo?.Url()" alt="@currentItem.Logo?.Name">
                                </a>
                            </div>
                        }
                    }
                }
            }
        </div>
    </div>
</section>