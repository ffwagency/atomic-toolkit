@model Services
@{
	if (Model == null) return;
}

<section id="services">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				@if (!string.IsNullOrWhiteSpace(Model.PreTitle))
				{
					<h2 class="text-uppercase section-heading">@Model.PreTitle</h2>
				}
				@if (!string.IsNullOrWhiteSpace(Model.Title))
				{
					<h3 class="text-muted section-subheading">@Model.Title</h3>
				}
			</div>
		</div>
		<div class="row text-center">
			@if (Model.ServicesItems != null && Model.ServicesItems.Any())
			{
				foreach (var item in Model.ServicesItems)
				{
					var currentItem = item.Content as ServiceItem;
					if (currentItem != null)
					{
						<div class="col-md-4 d-flex flex-column justify-content-evenly align-items-center">
							@if (currentItem.Image != null)
							{
								<img src="@currentItem.Image.Url()" style="width: 50%;" />
							}
							@if (!string.IsNullOrWhiteSpace(currentItem.Title))
							{
								<h4 class="section-heading">@currentItem.Title</h4>
							}
							@if (!string.IsNullOrWhiteSpace(currentItem.Description))
							{
								<p class="text-muted">@currentItem.Description</p>
							}
						</div>
					}
				}
			}
		</div>
	</div>
</section>