@using AtomicStarterKit.API
@model ContactModel
@{
	if (Model == null) return;
}

<section class="contact-section">
	<div class="container">
		<div class="row">
			@if (!string.IsNullOrWhiteSpace(Model.Contact.EmbededGoogleMap))
			{
				<div class="col">@Html.Raw(Model.Contact.EmbededGoogleMap)</div>
			}
			<div class="col-md-6 col-xl-4">
				<div class="p-3 p-xl-4">
					@using (Html.BeginUmbracoForm<ContactFormController>(nameof(ContactFormController.Submit), null, new { @id = "contactForm" }, FormMethod.Post, antiforgery: true))
					{
						<h4>@Model.Contact.FromPreTitle</h4>
						<p class="text-muted">@Model.Contact.FormTitle</p>
						<div class="mb-3">
							<label class="form-label" for="@nameof(ContactFormViewModel.Name)">Name</label>
							<input class="form-control" type="text" id="field_4bs9q" name="@nameof(ContactFormViewModel.Name)" value="" placeholder="John Doe" />
						</div>
						<div class="mb-3">
							<label class="form-label" for="@nameof(ContactFormViewModel.Email)">Email</label>
							<input class="form-control" type="email" id="field_1ghyp" name="@nameof(ContactFormViewModel.Email)" value="" placeholder="example@mail.com" />
						</div>
						<div class="mb-3">
							<label class="form-label" for="@nameof(ContactFormViewModel.Message)">Message</label>
							<textarea class="form-control" name="@nameof(ContactFormViewModel.Message)" id="field_jy2v2" rows="5" placeholder="@nameof(ContactFormViewModel.Message)" rows="6" required></textarea>
							<span class="error-massage">Please fill in the required fields</span>
						</div>
						@if (Model.Contact.LinkToTermsAndConditionsPage != null && Model.Contact.LinkToTermsAndConditionsPage.Any())
						{
							<div class="d-flex justify-content-center align-items-center flex-nowrap mb-3">
								<div class="form-check">
									<input class="form-check-input" type="checkbox" id="formCheck-1">
									<label class="form-check-label" for="formCheck-1">@Model.Contact.AcceptanceText &nbsp;<a href="@Model.Contact.LinkToTermsAndConditionsPage.FirstOrDefault()!.Url">@Model.Contact.LinkToTermsAndConditionsPage.FirstOrDefault()!.Name</a></label>
								</div>
							</div>
						}
						<div class="mb-3 text-center"><button class="btn" type="submit">Send</button></div>
					}
				</div>
			</div>
		</div>
	</div>
</section>